@using WebApplication2.Clases;
@model IEnumerable<WebApplication2.Clases.SedeCLS>

@{
    ViewBag.Title = "Index";
    string nombreSede = ViewBag.nombreSede;
}

<h2>Index</h2>
<form id="frmEnviar" asp-controller="Sede" asp-action="Index" class="mb-2"
      method="post">
    <label>Ingrese el nombre Sede</label>
    <input type="text" class="form-control form-control" name="nombreSede"
           onkeyup="Buscar()" | value="@nombreSede"/>
</form>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.iidSede)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombreSede)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.direccion)
        </th>
        <th></th>
    </tr>

    @foreach (SedeCLS item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.iidSede)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombreSede)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.direccion)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
    }

</table>
<script>
    function Buscar() {
        document.getElementById("frmEnviar").submit();

    }
</script>
